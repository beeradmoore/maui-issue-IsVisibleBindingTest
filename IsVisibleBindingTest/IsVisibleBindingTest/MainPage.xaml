<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IsVisibleBindingTest"
             x:Class="IsVisibleBindingTest.MainPage"
             x:DataType="local:MainPageModel">
    
    <Grid>
        <BoxView BackgroundColor="Red" PropertyChanged="BoxView_OnPropertyChanged" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="100" HeightRequest="100" IsVisible="{Binding IsSelected}" />
        <Button HorizontalOptions="Start" VerticalOptions="Start" Text="{Binding ButtonText}" Command="{Binding ToggleIsSelectedCommand}" />
    </Grid>

</ContentPage>
